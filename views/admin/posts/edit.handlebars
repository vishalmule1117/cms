<h1>Edit Post</h1>
<form action="/admin/posts/edit " method="post" >

<div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="title" class="form-control" id="title" value="{{post.title}}">
</div>

<div class="form-group">
    <label for="title" >Status</label>
    <select name="status" id="status" class="form-control">
        <option value="public">Public</option>
        <option value="private">Private</option>
        <option value="draft">Draft</option>
    </select>
</div>

<div class="form-check">
  <label class="form-check-label" for="allowComments">
    <input type="checkbox" {{#if post.allowComments}} checked="checked" {{/if}} class="form-check-input"  name="allowComments"  id="allowComments">
    Allow Comments
  </label>
</div>
 
<div class="form-group">
    <label for="title">Body</label>
    <textarea name="body" cols="30" rows="10" class="form-control" id="body">{{post.body}}</textarea>
</div>  

<button type="submit" class="btn-primary"> Submit</button>
</form> 