<h1>Post List</h1>

<table class="table table-striped table-dark table-bordered">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Title</th>
      <th scope="col">Status</th>
      <th scope="col">Allow Comments</th>
       <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
      {{#each posts}}
    <tr>
      <td>{{id}}</td>
      <td>{{title}}</td>
      <td>{{status}}</td>
      <td>{{allowComments}}</td>
       <td><a href="/admin/posts/edit/{{id}}" class="btn btn-info">Edit</a></td>
    </tr>

    {{/each}}
  </tbody>
</table>